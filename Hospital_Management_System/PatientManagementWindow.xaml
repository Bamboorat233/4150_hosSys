<Window x:Class="Hospital_MamSys_GUI.PatientManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Patient Management" Height="650" Width="1000"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4A90E2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#357ABD"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DeleteButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#E74C3C"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C0392B"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Height" Value="30"/>
        </Style>

        <Style TargetType="DatePicker">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Height" Value="30"/>
        </Style>
        
        <Style x:Key="DatePickerTextBoxStyle" TargetType="DatePickerTextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate>
                        <TextBox x:Name="PART_TextBox" 
                                 Text="{Binding Path=SelectedDate, StringFormat='yyyy-MM-dd', RelativeSource={RelativeSource AncestorType={x:Type DatePicker}}}" 
                                 IsReadOnly="True">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Path=SelectedDate, RelativeSource={RelativeSource AncestorType={x:Type DatePicker}}}" Value="{x:Null}">
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <VisualBrush Stretch="None" AlignmentX="Left">
                                                        <VisualBrush.Visual>
                                                            <TextBlock Text="Select Date" 
                                                                      FontStyle="Italic" 
                                                                      Foreground="Gray" 
                                                                      Margin="5,0,0,0"/>
                                                        </VisualBrush.Visual>
                                                    </VisualBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Height" Value="30"/>
        </Style>
    </Window.Resources>

    <Grid Background="#ECF0F1">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <Border Grid.Row="0" Background="White">
            <Border.Effect>
                <DropShadowEffect Color="#CCCCCC" Direction="270" ShadowDepth="1" BlurRadius="5" Opacity="0.2"/>
            </Border.Effect>
            <TextBlock Text="Patient Management" 
                      FontSize="24" 
                      FontWeight="SemiBold" 
                      Foreground="#2C3E50"
                      VerticalAlignment="Center"
                      Margin="30,0"/>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left - Patient List -->
            <Border Grid.Column="0" Background="White" CornerRadius="8" Padding="15">
                <Border.Effect>
                    <DropShadowEffect Color="#CCCCCC" Direction="270" ShadowDepth="2" BlurRadius="8" Opacity="0.2"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Search Bar -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Search:" VerticalAlignment="Center" Margin="0,0,10,0" FontSize="13"/>
                        <TextBox x:Name="txtSearch" Width="250" TextChanged="TxtSearch_TextChanged"/>
                        <Button Content="Refresh List" Style="{StaticResource ButtonStyle}" Click="BtnRefresh_Click" Margin="10,5,5,5"/>
                    </StackPanel>

                    <!-- Patient List -->
                    <DataGrid x:Name="dgPatients" 
                             Grid.Row="1"
                             AutoGenerateColumns="False"
                             IsReadOnly="True"
                             SelectionMode="Single"
                             SelectionChanged="DgPatients_SelectionChanged"
                             CanUserAddRows="False"
                             GridLinesVisibility="Horizontal"
                             HeadersVisibility="Column"
                             AlternatingRowBackground="#F8F9FA">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Patient ID" Binding="{Binding PatientID}" Width="80"/>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Date of Birth" Binding="{Binding DOB, StringFormat=yyyy-MM-dd}" Width="120"/>
                            <DataGridTextColumn Header="Gender" Binding="{Binding Gender}" Width="80"/>
                            <DataGridTextColumn Header="Contact" Binding="{Binding Contact}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Statistics -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
                        <TextBlock x:Name="txtCount" Text="Total 0 records" FontSize="12" Foreground="#7F8C8D"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Right - Operation Panel -->
            <Border Grid.Column="2" Background="White" CornerRadius="8" Padding="20">
                <Border.Effect>
                    <DropShadowEffect Color="#CCCCCC" Direction="270" ShadowDepth="2" BlurRadius="8" Opacity="0.2"/>
                </Border.Effect>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Patient Information" FontSize="18" FontWeight="SemiBold" Foreground="#2C3E50" Margin="0,0,0,20"/>

                        <!-- Patient ID -->
                        <TextBlock Text="Patient ID:" FontSize="12" Foreground="#7F8C8D" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtPatientID" IsReadOnly="True" Background="#ECF0F1" Margin="0,0,0,10"/>

                        <!-- Name -->
                        <TextBlock Text="Name:" FontSize="12" Foreground="#7F8C8D" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtName" Margin="0,0,0,10"/>

                        <!-- Date of Birth -->
                        <TextBlock Text="Date of Birth:" FontSize="12" Foreground="#7F8C8D" Margin="0,0,0,5"/>
                        <DatePicker x:Name="dpDOB" Margin="0,0,0,10" Language="en-US">
                        <DatePicker.Resources>
                            <Style TargetType="DatePickerTextBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate>
                                            <TextBox x:Name="PART_TextBox" 
                                                     Text="{Binding Path=SelectedDate, StringFormat='yyyy-MM-dd', RelativeSource={RelativeSource AncestorType={x:Type DatePicker}}}" 
                                                     IsReadOnly="True">
                                                <TextBox.Style>
                                                    <Style TargetType="TextBox">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Path=SelectedDate, RelativeSource={RelativeSource AncestorType={x:Type DatePicker}}}" Value="{x:Null}">
                                                                <Setter Property="Background">
                                                                    <Setter.Value>
                                                                        <VisualBrush Stretch="None" AlignmentX="Left">
                                                                            <VisualBrush.Visual>
                                                                                <TextBlock Text="Select Date" 
                                                                                          FontStyle="Italic" 
                                                                                          Foreground="Gray" 
                                                                                          Margin="5,0,0,0"/>
                                                                            </VisualBrush.Visual>
                                                                        </VisualBrush>
                                                                    </Setter.Value>
                                                                </Setter>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBox.Style>
                                            </TextBox>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </DatePicker.Resources>
                        </DatePicker>

                        <!-- Gender -->
                        <TextBlock Text="Gender:" FontSize="12" Foreground="#7F8C8D" Margin="0,0,0,5"/>
                        <ComboBox x:Name="cmbGender" Margin="0,0,0,10">
                            <ComboBoxItem Content="Male"/>
                            <ComboBoxItem Content="Female"/>
                            <ComboBoxItem Content="Other"/>
                        </ComboBox>

                        <!-- Contact -->
                        <TextBlock Text="Contact:" FontSize="12" Foreground="#7F8C8D" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtContact" Margin="0,0,0,10"/>

                        <!-- Address -->
                        <TextBlock Text="Address:" FontSize="12" Foreground="#7F8C8D" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtAddress" Height="60" TextWrapping="Wrap" AcceptsReturn="True" 
                                VerticalScrollBarVisibility="Auto" Margin="0,0,0,20"/>

                        <!-- Action Buttons -->
                        <Button Content="Add Patient" Style="{StaticResource ButtonStyle}" Click="BtnAdd_Click" Margin="0,5"/>
                        <Button Content="Update Info" Style="{StaticResource ButtonStyle}" Click="BtnUpdate_Click" Margin="0,5"/>
                        <Button Content="Delete Patient" Style="{StaticResource DeleteButtonStyle}" Click="BtnDelete_Click" Margin="0,5"/>
                        <Button Content="Clear Form" Click="BtnClear_Click" Margin="0,5">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
                                    <Setter Property="Background" Value="#95A5A6"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#7F8C8D"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Window>

