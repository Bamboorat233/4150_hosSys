<Window x:Class="Hospital_MamSys_GUI.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hospital Management System - Login" Height="500" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="#F0F4F8"
        ResizeMode="CanResize">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#4A90E2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#357ABD"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderBrush" Value="#D0D0D0"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        
        <Style TargetType="PasswordBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderBrush" Value="#D0D0D0"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#4A90E2">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Hospital Management System" 
                          FontSize="28" 
                          FontWeight="Bold" 
                          Foreground="White" 
                          HorizontalAlignment="Center"
                          Margin="0,0,0,0"/>
            </StackPanel>
        </Border>

        <!-- Login Form -->
        <Border Grid.Row="1" Background="White" 
                Margin="50,30,50,30" 
                CornerRadius="10">
            <Border.Effect>
                <DropShadowEffect Color="#CCCCCC" 
                                  Direction="270" 
                                  ShadowDepth="2" 
                                  BlurRadius="10" 
                                  Opacity="0.3"/>
            </Border.Effect>
            
            <StackPanel Margin="40,20">
                <TextBlock Text="User Login" 
                          FontSize="20" 
                          FontWeight="Bold" 
                          Foreground="#333333"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,20"/>

                <!-- Username -->
                <TextBlock Text="Username:" FontSize="14" Foreground="#555555" Margin="0,0,0,5"/>
                <TextBox x:Name="txtUsername" 
                        Height="35"
                        Margin="0,0,0,15"/>

                <!-- Password -->
                <TextBlock Text="Password:" FontSize="14" Foreground="#555555" Margin="0,0,0,5"/>
                <PasswordBox x:Name="txtPassword" 
                            Height="35"
                            Margin="0,0,0,20"/>

                <!-- Error Message -->
                <TextBlock x:Name="txtError" 
                          Foreground="Red" 
                          FontSize="12"
                          TextWrapping="Wrap"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,10"
                          Visibility="Collapsed"/>

                <!-- Login Button -->
                <Button Content="Login" 
                       Click="BtnLogin_Click"
                       Height="45"
                       Margin="0,0,0,10"/>

                <!-- Hint -->
                <TextBlock Text="Please use your account credentials to login" 
                          FontSize="11" 
                          Foreground="#999999"
                          HorizontalAlignment="Center"
                          Margin="0,10,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>

